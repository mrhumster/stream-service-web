    "react-redux": "^9.2.0",
    "react-router-dom": "^7.13.0",
    "redux": "^5.0.1",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
